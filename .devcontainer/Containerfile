FROM registry.access.redhat.com/ubi8/ubi:8.9

# Base tools + podman for nested builds
RUN dnf -y update && \
    dnf -y install \
      gcc gcc-c++ make automake autoconf libtool \
      git curl wget tar xz bzip2 findutils \
      python3 python3-pip python3-virtualenv \
      go-toolset \
      nodejs npm \
      podman fuse-overlayfs && \
    dnf clean all

# Configure podman storage for nested usage
RUN mkdir -p /etc/containers && \
    cat > /etc/containers/storage.conf <<'EOF'
[storage]
driver = "vfs"
graphroot = "/var/lib/containers/storage"
runroot = "/run/containers/storage"
mount_program = ""
EOF

# Minimal user setup
RUN useradd -m vscode && echo "vscode ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers
USER vscode
WORKDIR /workspaces/s390x-wheel-refinery
ENV PATH=/home/vscode/go/bin:/home/vscode/.local/bin:$PATH
